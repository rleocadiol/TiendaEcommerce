<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    border: 1px solid #e7e7e7;
    background-color: #f3f3f3;
}

li {
    float: left;
}

li a {
    display: block;
    color: #666;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
    font-family:verdana;
}

li a:hover:not(.active) {
    background-color: #ddd;
}

.center {
    position: absolute;
    right: 345px;
    width: -200px;
    padding: 10px;
}

div.img {
    border: 1px solid #ccc;
    height: 200px;
    width:200px;
}

div.img:hover {
    border: 1px solid #777;
}

div.img img {
    width: 100%;
    height: 100%;
}

div.desc {
    padding: 15px;
    text-align: center;
}

* {
    box-sizing: border-box;
}

.responsive {
    padding: 0 6px;
    float: left;
    right: 345px;
    width: -200px;
}




.clearfix:after {
    content: "";
    display: table;
    clear: both;
}
        html,
        body {
            margin: 0;
            padding: 0;
            background-color: #b0ecfd;
        }

        body {
            width: 100%;
            height: 100%;
            font-family: sans-serif;
            letter-spacing: 0.03em;
            line-height: 1.6;
        }

        .title {
            text-align: center;
            font-size: 40px;
            color: blue;
            margin-top: 100px;
            font-weight: 100;
        }

        .content {
            margin-top: 100px;
            max-width: 1200000000px;
            height: 830px;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: flex-start;
        }

            .content div.galery {
                width: 330px;
                height: 430px;
                border-radius: 8px;
                box-shadow: 0 2px 2px rgba(0, 0, 0, 0.2);
                margin: 20px;
                text-align: center;
                transition: all 0.25s;
            }

                .content div.galery img {
                    width: 330px;
                    height: 220px;
                }

        .container .card h4 {
            font-weight: 600;
        }

        .container .card p {
            padding: 0 1rem;
            font-size: 16px;
            font-weight: 300;
        }

        .container .card a {
            font-weight: 500;
            text-decoration: none;
            color: #3498db;
        }


        .cabeza {
            text-align: center;
        }

        div.gallery {
            margin: 5px;
            border: 1px solid #ccc;
            float: left;
            width: 180px;
            transition: all 0.25s;
        }

            div.gallery:hover {
                transform: translateY(-15px);
                box-shadow: 0 12px 16px rgba(0, 0, 0, 0.2);
            }

            div.gallery img {
                width: 100%;
                height: auto;
            }

        div.desc {
            padding: 15px;
            text-align: center;
        }
    </style>
</head>
<body style="background-color:#8DDBF0;">
  
    <div aling="center" style="padding-left:40em;">
        <img style="image-orientation:from-image;" height="150" width="550" src="~/Content/img/productos/im2.jpeg" />

        <div class="center" aling="center"style="padding-right:3em;">


            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Inicio", "Index", "paqueteria")</li>
                <li>@Html.ActionLink("Herramients de corte", "", "paqueteria")</li>
                <li>@Html.ActionLink("Utencilios basicos", "", "paqueteria")</li>
                <li>@Html.ActionLink("Recipientes de coccion", "", "paqueteria")</li>

                
            </ul>
        </div>

    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
